<section class="contact">
  <div class="container">
    <div class="top-header">
      <h1><%= I18n.t 'contatti-1'%></h1>
    </div>
    <div class="row">
      <div id="map-outer" class="col-md-12 contact-info">
        <div class="col-md-4">
          <div id="address" class="col-md-12">
            <address>
            <strong>M&C Partners S.r.l.</strong><br>
                Via Borghetto, 3<br>
                20122 Milano<br>
                <%= I18n.t 'contatti-2'%><br>
                <br/>
                <strong><%= I18n.t 'contatti-3'%></strong> +39 02 4547 4900<br/>
                <strong>Fax:</strong> +39 02 99986746
           </address>
          </div>
          <div id="address" class="col-md-12">
            <address>
            <strong>M&C Partners LDA</strong><br>
                Rua Dom Pedro V<br>
                1250-094 Lisboa<br>
                <%= I18n.t 'contatti5'%><br>
                <br/>
                <strong><%= I18n.t 'contatti-3'%></strong> +351 218 000 599<br/>
           </address>
          </div>
        </div>
        <%= simple_form_for @contact, :html=> { class: "form-horizontal" }, :url => contact_path, :method => :post do |f| %>
          <div class="form-group">
              <div class="col-md-4">
                <%=  f.input_field :first_name, class: "form-control", label: false, :required => true, placeholder: "Name" %>
              </div>
              <div class="col-md-4">
                <%=  f.input_field :last_name, class: "form-control", label: false, :required => true, placeholder: "Last Name" %>
              </div>
              <div class="col-md-3 input-group">
              <span class="input-group-addon">@</span>
                  <%=  f.input_field :email, class: "form-control", label: false, :required => true, :as => :email, placeholder: "Email Address" %>
              </div>
              <div class="col-md-3 input-group">
                <span class="input-group-addon">#</span>
                <%=  f.input_field :telephone, class: "form-control", :as => :tel, label: false,placeholder: "Telephone" %>
              </div>
              <div class="col-md-7">
                <%=  f.input_field :message, class: "form-control", rows: "6", label: false, :as => :text, :required => true, placeholder: "Your question or comment here" %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-md-6">
                <%=  f.button :submit, t("contatti-4"), :class=> "btn btn-warning pull-right"%>
              </div>
            </div>
          <% end %>
        </div><!-- /map-outer -->
      </div> <!-- /row -->

      <div class="row">
          <div id="map-outer" class="col-md-12">
            <div id="map-container" class="col-md-12"></div>
          </div><!-- /map-outer -->
      </div> <!-- /row -->
    </div> <!-- /row -->
  </div> <!-- /container -->
</section>

    <script src="https://maps.google.com/maps/api/js?sensor=false"></script>
    <script>

      function init_map() {
    var var_location = new google.maps.LatLng(45.472851,9.2044673);

         var var_mapoptions = {
              center: var_location,
              zoom: 15,
              mapTypeId: google.maps.MapTypeId.ROADMAP,
              mapTypeControl: true,
              panControl:true,
              rotateControl:true,
              streetViewControl: true,
            };

    var var_marker = new google.maps.Marker({
      position: var_location,
      map: var_map,
      title:"M&C Partners srl"});

        var var_map = new google.maps.Map(document.getElementById("map-container"),
            var_mapoptions);

    var_marker.setMap(var_map);

      }

      google.maps.event.addDomListener(window, 'load', init_map);

    </script>
